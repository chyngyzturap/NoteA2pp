<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkBlue"
    tools:context=".ui.profile.ProfileFragment">

    <FrameLayout
        android:layout_marginTop="0dp"
        android:background="@drawable/wall"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <LinearLayout
        android:id="@+id/l_2"
        android:background="@drawable/edit_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="200dp"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf" />

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:text="Chyngyz Turapov"
                android:textColor="#2F4F4F"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style1"/>

            <TextView
                android:id="@+id/second_name"
                android:text="22 y.o, Android developer"
                android:textColor="#6B6B6B"
                android:textSize="12sp"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style2"/>

            <LinearLayout
                android:layout_below="@id/second_name"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="1212"
                        android:textSize="9sp"
                        android:textColor="#2F4F4F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style2"/>

                    <TextView
                        android:id="@+id/phone"
                        android:text="Followers"
                        android:textColor="#6B6B6B"
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5+"
                        android:textColor="#2F4F4F"
                        android:textSize="9sp" />

                    <TextView
                        android:textSize="8sp"
                        android:text="Rating"
                        android:textColor="#6B6B6B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style2"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="22dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/edit_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/avatarka" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_below="@id/l_2"
        android:layout_margin="20dp"
        android:background="@drawable/edit_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="My hobbies"
            android:textSize="12sp"
            android:textColor="#2F4F4F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style1"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Writing"
                    android:textSize="9sp"
                    android:textColor="#2F4F4F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>

                <TextView
                    android:text="Some literature texts"
                    android:textSize="8sp"
                    android:textColor="#6B6B6B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Play a guitar"
                    android:textSize="9sp"
                    android:textColor="#2F4F4F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>

                <TextView
                    android:text="Music is my love"
                    android:textSize="8sp"
                    android:textColor="#6B6B6B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Physical activity"
                    android:textSize="9sp"
                    android:textColor="#2F4F4F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>

                <TextView
                    android:text="Music is my love"
                    android:textSize="8sp"
                    android:textColor="#6B6B6B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/style2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
